{
  "name": "template-nodejs-any_framework-clean_architecture",
  "version": "1.0.4",
  "description": "A template for node js projects",
  "main": "dist/index.js",
  "author": "William Gravina <dev.gravinawilliam@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "check:format": "prettier --check .",
    "check:lint": "eslint . --ext .js,.ts --color",
    "check:spelling": "cspell \"{README.md,TODO.md,.github/*.md,src/**/*.ts}\"",
    "check:staged": "lint-staged",
    "check:types": "tsc --pretty --noEmit",
    "commit": "cz",
    "coverage:view": "http-server -p 9003 ./coverage/lcov-report -o",
    "fix:format": "prettier --check --write --ignore-unknown .",
    "fix:lint": "npm run check:lint -- --fix",
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "sonar": "node sonar-project.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/index.ts",
    "start:prod": "node ./dist/index.js",
    "test": "jest --colors --no-cache --passWithNoTests --detectOpenHandles --runInBand",
    "test:coverage": "yarn test --coverage",
    "test:coveralls": "npm run test:coverage && coveralls < coverage/lcov.info",
    "test:e2e": "yarn test --testPathPattern=e2e",
    "test:int": "yarn test --testPathPattern=integration",
    "test:staged": "npm t -- --findRelatedTests",
    "test:unit": "yarn test --testPathPattern=unit",
    "test:watch": "yarn test --watch",
    "update-deps": "npm-check-updates -u",
    "version": "standard-version -t"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/platform-fastify": "^8.2.6",
    "@nestjs/swagger": "^5.2.0",
    "cookie-parser": "^1.4.6",
    "danger": "^11.0.2",
    "dotenv": "^16.0.0",
    "dotenv-defaults": "^5.0.0",
    "dotenv-expand": "^8.0.1",
    "endent": "^2.1.0",
    "express": "^4.17.2",
    "fastify-swagger": "^4.15.0",
    "figlet": "^1.5.2",
    "helmet": "^5.0.2",
    "http-graceful-shutdown": "^3.1.5",
    "node-emoji": "^1.11.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv-defaults": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/figlet": "^1.5.4",
    "@types/jest": "27.4.0",
    "@types/node": "^17.0.17",
    "@types/node-emoji": "^1.8.1",
    "@types/source-map-support": "^0.5.4",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.4",
    "coveralls": "^3.1.1",
    "cspell": "^5.18.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "http-server": "^14.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jest-mock-extended": "^2.0.4",
    "jest-sonar": "^0.2.12",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^12.3.4",
    "npm-check-updates": "^12.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sonarqube-scanner": "^2.8.1",
    "standard-version": "^9.3.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
